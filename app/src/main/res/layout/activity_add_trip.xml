<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/gray400"
    android:padding="16dp"
    android:id="@+id/main"
    tools:context=".AddTripActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_gravity="center"
        android:padding="30dp">

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp"
            android:elevation="6dp"
            android:padding="20dp"
            android:backgroundTint="@color/white"
            app:cardCornerRadius="16dp"
            android:paddingStart="0dp">

            <LinearLayout
                android:padding="20dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <!-- Trip Title -->
                <EditText
                    android:id="@+id/etTripTitle"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Trip Title"
                    android:textColorHint="@color/gray700"
                    android:drawableLeft="@android:drawable/ic_menu_edit"
                    android:padding="12dp"
                    android:background="@drawable/rounded_edittext_bg"
                    android:layout_marginBottom="16dp" />

                <!-- Trip Location -->
                <EditText
                    android:id="@+id/etTripLocation"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Location"
                    android:textColorHint="@color/gray700"
                    android:drawableLeft="@android:drawable/ic_menu_edit"
                    android:padding="12dp"
                    android:background="@drawable/rounded_edittext_bg"
                    android:layout_marginBottom="16dp" />

                <!-- Start Date -->
                <EditText
                    android:id="@+id/etStartDate"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Start Date"
                    android:focusable="false"
                    android:clickable="true"
                    android:padding="12dp"
                    android:backgroundTint="@color/sky500"
                    android:layout_marginBottom="16dp"
                    android:background="@drawable/edittext_bg_tp" />

                <!-- End Date -->
                <EditText
                    android:id="@+id/etEndDate"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="End Date"
                    android:focusable="false"
                    android:clickable="true"
                    android:padding="12dp"
                    android:backgroundTint="@color/sky500"
                    android:layout_marginBottom="20dp"
                    android:background="@drawable/edittext_bg_tp" />

                <!-- Save Trip Button -->
                <Button
                    android:id="@+id/btnSaveTrip"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Save Trip"
                    android:textColor="@color/white"
                    android:backgroundTint="@color/sky500"
                    android:padding="14dp"
                    android:background="@drawable/rounded_btn_tp" />
            </LinearLayout>
        </androidx.cardview.widget.CardView>
    </LinearLayout>
</ScrollView>
